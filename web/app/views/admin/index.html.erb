<h1>Listing users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Pass</th>
    <th>Active</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.user %></td>
    <td><%=h user.pass %></td>
    <td><%=h user.active %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>